 <%= form.label :Price %>
 <%= form.text_field :Price, id: :product_price, :type =>"text" %>
 </div>
 <div class="field">
 <%= form.label :Image %>
 <%= form.text_field :Image, id: :product_image %>
 </div>
 
 <div class="actions">
 <%= form.submit %>
 </div>
<% end %>
</div>